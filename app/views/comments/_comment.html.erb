<% unless comment.archived? %>
  <div class="card mb-3 text-dark" style="width: 18rem;">
    <div class="card-header bg-transparent"><%= comment.commenter %></div>
    <div class="card-body">
      <h5 class="card-title">Say:</h5>
      <p class="card-text"><%= comment.body %></p>
    </div>
    <div class="card-footer bg-transparent d-flex justify-content-end"> <%= link_to "Delete", [comment.article, comment], data: {
                  turbo_method: :delete,
                  turbo_confirm: "Are you sure?"
                }, class:'text-decoration-none' %></div>
  </div>
<% end %>